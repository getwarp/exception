{
  "name": "getwarp/exception",
  "description": "Tools to design friendly and translatable exceptions",
  "type": "library",
  "keywords": [
    "exception"
  ],
  "homepage": "https://github.com/getwarp/exception",
  "license": "MIT",
  "authors": [
    {
      "name": "Constantine Karnaukhov",
      "email": "genteelknight@gmail.com",
      "homepage": "https://getwarp.dev",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "symfony/string": "^5.2|^6.0",
    "symfony/translation-contracts": "^2.3|^3.0",
    "yiisoft/friendly-exception": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Warp\\Exception\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Warp\\Exception\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  }
}
